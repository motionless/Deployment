@model Motionless.Deployment.Admin.Models.PackageListViewModel
@using Motionless.Deployment.Data.Model
@using PagedList
@using PagedList.Mvc
@{
	ViewBag.Title = "Index";
}

<h2>List of Packages</h2>

<table class="table table-striped table-hover">
	<thead>
		<th>Id</th>
		<th>Name</th>
		<th>Created At</th>
	    <th>Updated At</th>
	    <th>Edit</th>
        <th>Delete</th>
	</thead>
	@foreach (var package in Model.Packages)
 {
		<tr>
			<td>@package.Id</td>
			<td>@package.Name</td>
			<td>@package.CreatedAt</td>
		    <td>@package.UpdatedAt</td>
		    <td>@Html.ActionLink("Edit","Edit",new {@package.Id, page = Model.Packages.PageNumber},new {@class="btn"})</td>
            <td>@Html.ActionLink("Delete","Delete",new {@package.Id, page = Model.Packages.PageNumber},new {@class="btn btn-danger"})</td>
		</tr>
 }
</table>

<!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
@Html.PagedListPager(Model.Packages, page => Url.Action("Index", new { page }),new PagedListRenderOptions{Display = PagedListDisplayMode.IfNeeded})