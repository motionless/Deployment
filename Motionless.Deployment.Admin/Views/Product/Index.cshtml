@using Motionless.Deployment.Data.Model
@using PagedList
@using PagedList.Mvc
@{
	ViewBag.Title = "Index";
}

<h2>List of Products</h2>

<table class="table table-striped table-hover">
	<thead>
		<th>Id</th>
		<th>Name</th>
		<th>Created At</th>
	    <th>Updated At</th>
	    <th>Edit</th>
        <th>Delete</th>
	</thead>
	@foreach (Product product in ViewBag.OnePageOfProducts)
 {
		<tr>
			<td>@product.Id</td>
			<td>@product.Name</td>
			<td>@product.CreatedAt</td>
		    <td>@product.UpdatedAt</td>
		    <td>@Html.ActionLink("Edit","Edit",new {@product.Id, page = ((IPagedList)ViewBag.OnePageOfProducts).PageNumber},new {@class="btn"})</td>
            <td>@Html.ActionLink("Delete","Delete",new {@product.Id, page = ((IPagedList)ViewBag.OnePageOfProducts).PageNumber},new {@class="btn btn-danger"})</td>
		</tr>
 }
</table>

<!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
@Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Index", new { page }),new PagedListRenderOptions{Display = PagedListDisplayMode.IfNeeded})