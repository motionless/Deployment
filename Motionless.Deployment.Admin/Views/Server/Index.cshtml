@using Motionless.Deployment.Data.Model
@using PagedList
@using PagedList.Mvc
@{
	ViewBag.Title = "Server List";
}

<h2>List of Server</h2>

<table class="table table-striped table-hover">
	<thead>
		<th>Id</th>
		<th>Name</th>
		<th>Created At</th>
	    <th>Updated At</th>
		<th>Edit</th>
		<th>Delete</th>
	</thead>
	@foreach (Server server in ViewBag.Servers)
 {
		<tr>
			<td>@server.Id</td>
			<td>@server.Name</td>
			<td>@server.CreatedAt</td>
		    <td>@server.UpdatedAt</td>
			<td>@Html.ActionLink("Edit","Edit",new {@server.Id, page = ((IPagedList)ViewBag.Servers).PageNumber},new {@class="btn"})</td>
			<td>@Html.ActionLink("Delete","Delete",new {@server.Id, page = ((IPagedList)ViewBag.Servers).PageNumber},new {@class="btn btn-danger"})</td>
		</tr>
 }
</table>

<!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
@Html.PagedListPager((IPagedList)ViewBag.Servers, page => Url.Action("Index", new { page }),new PagedListRenderOptions{Display = PagedListDisplayMode.IfNeeded})