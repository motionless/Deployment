@model Motionless.Deployment.Admin.Models.WebsiteListViewModel
@using Motionless.Deployment.Data.Model
@using PagedList
@using PagedList.Mvc
@{
	ViewBag.Title = "Website List";
}

<h2>List of Server</h2>

<table class="table table-striped table-hover">
	<thead>
		<th>Id</th>
		<th>Name</th>
		<th>Created At</th>
	    <th>Updated At</th>
		<th>Edit</th>
		<th>Delete</th>
	</thead>
	@foreach (Website website in Model.Websites)
 {
		<tr>
			<td>@website.Id</td>
			<td>@website.Name</td>
			<td>@website.CreatedAt</td>
		    <td>@website.UpdatedAt</td>
			<td>@Html.ActionLink("Edit","Edit",new {website.Id, page = Model.Websites.PageNumber},new {@class="btn"})</td>
			<td>@Html.ActionLink("Delete","Delete",new {website.Id, page = Model.Websites.PageNumber},new {@class="btn btn-danger"})</td>
		</tr>
 }
</table>

<!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
@Html.PagedListPager(Model.Websites, page => Url.Action("Index", new { page }),new PagedListRenderOptions{Display = PagedListDisplayMode.IfNeeded})